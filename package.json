		"npm-run-all": "^4.1.5",
		"prettier": "^2.8.4",
		"tsup": "^6.6.0",
		"typescript": "^4.9.5"
	},
	"dependencies": {
		"@actions/core": "^1.10.0",
		"@actions/exec": "^1.1.1",
		"@actions/github": "^5.1.1",
		"esbuild": "^0.17.7",
		"has-pnpm": "^1.1.1",
		"has-yarn": "^3.0.0",
